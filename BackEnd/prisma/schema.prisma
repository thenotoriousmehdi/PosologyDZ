generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  email       String @unique
  password    String
  role        Role
  firstName   String
  familyName  String
}

enum Role {
  pharmacist
  preparateur
  admin
}

model Patient {
  id          Int      @id @default(autoincrement()) 
  name        String  
  age         Int     
  gender      String  
  weight      Float    
  phoneNumber String   
  antecedents String?   
  etablissement String? 
  medicin     String?  
  specialite  String?  
  grade       String   
  medicinePreparations MedicinePreparation[]

  createdAt   DateTime @default(now())  
  updatedAt   DateTime @updatedAt      
}

model MedicinePreparation {
  id               Int       @id @default(autoincrement())
  patient_id       Int       
  dci              String    
  indication       String?  
  dosageInitial    Float    
  dosageAdapte     Float?    
  modeEmploi       Float     
  voieAdministration String   
  qsp              Int      
  excipient        String?   
  preparationDate  DateTime  
  peremptionDate   DateTime  
  statut           Statut
  nombreGellules   Int      
  compriméEcrasé   Int       
  created_at       DateTime  @default(now()) 
  updated_at       DateTime  @updatedAt       

  patient          Patient   @relation(fields: [patient_id], references: [id]) 
}

enum Statut {
  A_faire
  En_Cours
  Termine
}
